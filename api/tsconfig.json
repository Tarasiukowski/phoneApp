{
  "compilerOptions": {
    "target": "es5",
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "declaration": false
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
